<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Perfil.nav_perfil">

    <ImageView
        android:id="@+id/fotoPerfilimageView"
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:layout_margin="20dp"
        android:contentDescription="@string/perfil"
        android:src="@drawable/fotivo" />

    <TextView
        android:id="@+id/nombrePerfil_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:padding="5dp"
        android:text="@string/nombre" />

    <TextView
        android:id="@+id/correoPerfil_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:padding="5dp"
        android:text="@string/correo_electronico" />

    <Button
        android:id="@+id/cerrar_perfil_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="@string/cerrar_sesion" />

</LinearLayout>